#!/bin/sh

set -e

case "$1" in
  "--help"|"-h"|"")
    echo "Usage: $0 [options] {container-name|--rm} image-name" >&2
    echo "  -v|--volume host-path:container-path" >&2
    echo "      Bind-mount host-path on the host VM as container-path" >&2
    echo "      within the guest container." >&2
    exit 1
    ;;
esac

my_dir="`dirname $0`"
container_name="$("$my_dir"/cc-create "$@")"

while [ -n "$1" ]; do
  case "$1" in
    "--volume"|"-v")
      shift 2
      ;;
    "--rm")
      break; # end of option args
      ;;
    "-"*)
      # Ignore options.
      shift
      ;;
    *)
      break; # end of option args
      ;;
  esac
done

image_name="$2"
image="/var/cookie-cutter/images/$image_name"
if [ "x$1" = "x--rm" ]; then
  remove=1
fi
container="/var/cookie-cutter/containers/$container_name"
shift 2
volumes="$(cat "$container/volumes")"
echo "$container_name" > "$container"/filesystem/etc/debian_chroot

each_mount () {
  local cmd="$1"
  echo "$volumes" | while read line; do
    [ -z "$line" ] && continue # First line's always blank.
    echo "$line" | tr ':' '\n' | {
      read host_path
      read container_path
      host_container_path="$container/filesystem/$container_path"
      eval "$cmd"
    }
  done
}

cleanup_mounts () {
  each_mount '
    #echo "Umounting [$container_path]" >&2
    umount "$host_container_path"
  '
}

cleanup="
  #echo Cleaning up... >&2
  cleanup_mounts
  '$my_dir'/cc-umount '$container_name'
"
if [ "$remove" = "1" ]; then
  cleanup="
    $cleanup
    rm -rf --one-file-system '$container'
  "
fi
trap "$cleanup" INT TERM HUP EXIT

systemd-nspawn --boot --quiet \
  --directory="$container"/filesystem -M "$container_name" "$@"
