#!/bin/sh

set -e

case "$1" in
  "--help"|"-h"|"")
    echo "Usage: $0 container-name" >&2
    exit 1
    ;;
esac

container_name="$1"
container="/var/cookie-cutter/containers/$container_name"

if cut -f2 -d' ' < /proc/mounts |
    grep -xq --fixed-strings "$container/filesystem"; then
  umount "$container/filesystem" # only if mounted!
fi
