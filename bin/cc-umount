#!/bin/sh

set -e

case "$1" in
  "--help"|"-h"|"")
    echo "Usage: $0 container-name" >&2
    exit 1
    ;;
esac

container_name="$1"
container="/var/cookie-cutter/containers/$container_name"
my_dir="`dirname $0`"

lib='
  is_mounted () {
    local path="$1"
    cut -f2 -d" " < /proc/mounts |
        grep -xq --fixed-strings "$path"
  }

  unmount_if_mounted () {
    local path="$1"
    #echo "unmount_if_mounted [$path]" >&2
    if is_mounted "$path"; then
      umount "$path"
    fi
  }

  clean_path () {
    local path="$1"
    # remove dup slashes
    path="$(echo "$path" | sed "s,//*,/,g")"
    # remove non-root trailing slash
    path="$(echo "$path" | sed "s,\(..*\)/$,\1,")"
    # This does not normalize /./ or foo/.. yet.
    echo "$path"
  }
'
eval "$lib"

cleanup_mounts () {
  "$my_dir"/cc-each-volume "$container_name" '
    '"$lib"'
    #echo "Umounting [$container_path]" >&2
    unmount_if_mounted "$(clean_path "$host_container_path")"
  '
}

cleanup_mounts
unmount_if_mounted "$container/filesystem"
