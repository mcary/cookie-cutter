#!/bin/sh

set -e

case "$1" in
  "--help"|"-h"|"")
    echo "Usage: $0 container-name cmd..." >&2
    exit 1
    ;;
esac

container_name="$1"
container="/var/cookie-cutter/containers/$container_name"
shift 1

default_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
chroot "$container" env -i PATH="$default_path" "$@"
